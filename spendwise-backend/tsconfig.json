{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist",

    // Module system
    "module": "commonjs",
    "moduleResolution": "node",

    // Language features
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // Output helpers
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"]
}
